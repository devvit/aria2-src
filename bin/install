#!/usr/bin/env sh

install() {
  version=$2
  install_dir=$3

  build_dir=$(mktemp -d)
  cd $build_dir

  git clone --depth 1 --recursive https://github.com/aria2/aria2
  cd aria2
  autoreconf -i
  ./configure --prefix=$install_dir
  make install || exit 1
}

install $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
